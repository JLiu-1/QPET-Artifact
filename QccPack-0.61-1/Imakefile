SUBDIRS = src
CLEAN_FILES = *~

QCCPACK_MISC_DOCS = \
	README \
	CHANGELOG \
	RELEASE_NOTES \
	LICENSE-GPL \
	LICENSE-LGPL


COMPRESS_FILES = $(QCCPACK_MISC_DOCS)

CURRENT_DIR = $(QCCPACK)

all: make.lib make.utils

make.lib:: make.libheader

install: all install.lib install.utils install.man install.html-man \
	install.data install.doc
install.lib:: install.libheader

clean:: uninstall

compress:: clean


QccDir()

QccSubdirs($(SUBDIRS))

QccStaticLib()

#ifndef NO_DYNAMIC_LIB
QccDynamicLib()
#endif

QCCPACK_DATA_DIRS = Wavelets Images Codes Matlab Misc
QccInstallData()

QccInstallDoc($(QCCPACK_MISC_DOCS))

dist: 
	@echo "Removing development directories..."
	@$(RMDIR) \@@\
		$(QCCPACK_LIB_PATH) \@@\
		$(QCCPACK_INCLUDE_PATH) \@@\
		$(QCCPACK)/bin \@@\
		$(QCCPACK)/man \@@\
		$(QCCPACK)/doc \@@\
		$(QCCPACK)/share
